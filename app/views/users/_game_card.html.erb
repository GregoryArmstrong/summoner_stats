<div class="container center">
  <div class="card small black">
    <div class="card-image">
      <div class="row">
        <div class="col s5">
          <%= image_tag(game.champion_image, class: "circle") %>
        </div>
        <div class="col s7">
          <div class="text-match-background">
            <%= game.champion_name %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-content">
      <span class="card-title text-match-background">
        <% if game.win? %>
        <div class="card-panel activator green darken-3">
          <% else %>
          <div class="card-panel activator red darken-3">
            <% end %>
            <!-- <%= game.champion_name %> -->
            Kills: <%= game.kills %>
            Deaths: <%= game.deaths %>
            Assists: <%= game.assists %>
            KDA: <%= game.kda %>
          </div>
        </span>
      </div>
      <div class="card-reveal black">
        <span class="card-title text-match-background text-darken-4">
          <% if game.win? %>
            Victory
          <% else %>
            Defeat
          <% end %>
        </span>
        <div class="text-match-background">
          <div class="row">
            <%= game.game_type %>,
            IP Earned: <%= game.ip_earned %>
          </div>
          <div class="row">
            <div class="col s6">
              <div class="card-panel match-background black-text">
                Max Level: <%= game.max_level %>
                <br>
                Creep Score: <%= game.creep_score %>
                <br>
                Neutral Minions Total Score: <%= game.neutral_minions %>
                <br>
                Neutral Minions Enemy Jungle Score: <%= game.neutral_minions_enemy %>
                <br>
                Neutral Minions Friendly Jungle Score: <%= game.neutral_minions_friendly %>
                <br>
                Gold Earned: <%= game.gold_earned %>
                <br>
                Gold Spent: <%= game.gold_spent %>
                <br>
                Unspent Gold: <%= game.unspent_gold %>
                <br>
                Inhibitors Destroyed: <%= game.inhibitors_destroyed %>
                <br>
                Towers Destroyed: <%= game.towers_destroyed %>
                <br>
                Wards Placed: <%= game.wards_placed %>
                <br>
                Vision Wards Purchased: <%= game.vision_wards %>
                <br>
                Wards Destroyed: <%= game.wards_destroyed %>
                <br>
                Total Healing: <%= game.total_healing %>
              </div>
            </div>
            <div class="col s6">
              <div class="card-panel match-background black-text">
                Kills: <%= game.kills %>
                <br>
                Deaths: <%= game.deaths %>
                <br>
                Assists: <%= game.assists %>
                <br>
                Killing Sprees: <%= game.killing_sprees %>
                <br>
                Largest Killing Spree: <%= game.largest_killing_spree %>
                <br>
                Largest Multi-Kill: <%= game.largest_multi_kill %>
                <br>
                Total Damage: <%= game.total_damage %>
                <br>
                Total Damage Taken: <%= game.total_damage_taken %>
                <br>
                Physical Damage Dealt: <%= game.physical_damage_dealt %>
                <br>
                Physical Damage Taken: <%= game.physical_damage_taken %>
                <br>
                Magic Damage Dealt: <%= game.magic_damage_dealt %>
                <br>
                Magic Damage Taken: <%= game.magic_damage_taken %>
                <br>
                True Damage Dealt: <%= game.true_damage_dealt %>
                <br>
                True Damage Taken: <%= game.true_damage_taken %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <ul class="collection with-header">
                <li class="collection-header"><h4>Items</h4></li>
                <% item_0 = game.item_0 if game.item_0 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_0.image, class: "circle") if game.item_0 %>
                  <span class="title"><%= item_0.name if game.item_0 %></span>
                  <p>Description: <%= item_0.description if game.item_0 %></p>
                </li>
                <% item_1 = game.item_1 if game.item_1 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_1.image, class: "circle") if game.item_1 %>
                  <span class="title"><%= item_1.name if game.item_1 %></span>
                  <p>Description: <%= item_1.description if game.item_1 %></p>
                </li>
                <% item_2 = game.item_2 if game.item_2 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_2.image, class: "circle") if game.item_2 %>
                  <span class="title"><%= item_2.name if game.item_2 %></span>
                  <p>Description: <%= item_2.description if game.item_2 %></p>
                </li>
                <% item_3 = game.item_3 if game.item_3 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_3.image, class: "circle") if game.item_3 %>
                  <span class="title"><%= item_3.name if game.item_3 %></span>
                  <p>Description: <%= item_3.description if game.item_3 %></p>
                </li>
                <% item_4 = game.item_4 if game.item_4 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_4.image, class: "circle") if game.item_4 %>
                  <span class="title"><%= item_4.name if game.item_4 %></span>
                  <p>Description: <%= item_4.description if game.item_4 %></p>
                </li>
                <% item_5 = game.item_5 if game.item_5 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_5.image, class: "circle") if game.item_5 %>
                  <span class="title"><%= item_5.name if game.item_5 %></span>
                  <p>Description: <%= item_5.description if game.item_5 %></p>
                </li>
                <% item_6 = game.item_6 if game.item_6 %>
                <li class="collection-item avatar black">
                  <%= image_tag(item_6.image, class: "circle") if game.item_6 %>
                  <span class="title"><%= item_6.name if game.item_6 %></span>
                  <p>Description: <%= item_6.description if game.item_6 %></p>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
